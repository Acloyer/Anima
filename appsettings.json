{
    "Logging": {
        "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Anima": "Debug"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Data Source=anima.db"
    },
    "Anima": {
        "Version": "0.1.0",
        "Architecture": "SA-TM",
        "MaxInstancesPerKey": 1,
        "InactivityTimeoutHours": 24,
        "ConsciousCycleIntervalSeconds": 60,
        "EnableEthicalConstraints": true,
        "EnableSelfModification": true,
        "EnableEmotionalSystem": true,
        "EnableLearningSystem": true
    },
    "RateLimit": {
        "RequestsPerMinute": 60,
        "RequestsPerHour": 1000,
        "RequestsPerDay": 10000
    },
    "ApiKeys": {
        "CreatorKey": "anima-creator-key-2025-v1-secure",
        "ValidApiKeys": [
        "anima-creator-key-2025-v1-secure"
        ]
    },
    "Telegram": {
        "BotToken": "",
        "WebhookUrl": "",
        "EnableNotifications": true
    },
    "Security": {
        "EnableApiKeyAuth": true,
        "EnableRateLimit": true,
        "EnableEthicalConstraints": true,
        "MaxRequestSizeBytes": 1048576,
        "AllowedOrigins": ["*"],
        "RequireHttps": false
    },
    "Paths": {
        "DataDirectory": "./data",
        "LogDirectory": "./logs",
        "PreferencesFile": "./data/creator_preferences.json"
    }
}